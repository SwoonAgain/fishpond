	<servlet>
	    <servlet-name>server</servlet-name>
	    <servlet-class>fishpond.server.Server</servlet-class>
	    <load-on-startup>2</load-on-startup>
	</servlet>
 -->
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>
	
</web-app>